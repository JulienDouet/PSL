// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// BETTER-AUTH TABLES
// ============================================

model User {
  id            String    @id
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // PSL Custom Fields
  displayName   String?
  mmr           Int       @default(1000)
  gamesPlayed   Int       @default(0)
  discordId     String?   @unique
  twitchId      String?   @unique
  jklmUsername  String?   @unique
  isBanned      Boolean   @default(false)
  isVerified    Boolean   @default(false)
  
  // BetterAuth Relations
  sessions      Session[]
  accounts      Account[]
  
  // PSL Relations
  matchPlayers      MatchPlayer[]
  mmrHistory        MMRHistory[]
  categoryMMRs      UserCategoryMMR[]
  achievements      UserAchievement[]
  reportsMade       Report[]  @relation("Reporter")
  reportsAgainst    Report[]  @relation("Reported")
  jklmVerification  JKLMVerification?
}

model Session {
  id        String   @id
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// ============================================
// MMR BY CATEGORY
// ============================================

model UserCategoryMMR {
  id          String   @id @default(cuid())
  userId      String
  category    Category
  mmr         Int      @default(1000)
  gamesPlayed Int      @default(0)
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, category])
}

enum Category {
  GP      // Grand Public
  ANIME   // Anime/Manga
  FLAGS   // Drapeaux
  MUSIC   // Musique
  MOVIES  // Films
  GAMES   // Jeux Vidéo
}

// ============================================
// MATCHES
// ============================================

model Match {
  id          String      @id @default(cuid())
  lobbyCode   String
  category    Category    @default(GP)
  status      MatchStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  startedAt   DateTime?
  endedAt     DateTime?
  
  players     MatchPlayer[]
}

enum MatchStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model MatchPlayer {
  id          String   @id @default(cuid())
  matchId     String
  userId      String
  placement   Int?
  points      Int?
  mmrBefore   Int
  mmrAfter    Int?
  mmrChange   Int?
  isAbandoned Boolean  @default(false)
  
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([matchId, userId])
}

// ============================================
// MMR HISTORY
// ============================================

model MMRHistory {
  id        String   @id @default(cuid())
  userId    String
  matchId   String?
  category  Category @default(GP)
  oldMMR    Int
  newMMR    Int
  change    Int
  reason    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// ACHIEVEMENTS
// ============================================

model Achievement {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String
  icon        String
  category    AchievementCategory
  
  users       UserAchievement[]
}

enum AchievementCategory {
  PROGRESSION
  PERFORMANCE
  SPECIAL
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  
  @@unique([userId, achievementId])
}

// ============================================
// REPORTS & MODERATION
// ============================================

model Report {
  id         String       @id @default(cuid())
  reporterId String
  reportedId String
  reason     String
  evidence   String?      @db.Text
  status     ReportStatus @default(PENDING)
  createdAt  DateTime     @default(now())
  resolvedAt DateTime?
  
  reporter   User @relation("Reporter", fields: [reporterId], references: [id], onDelete: Cascade)
  reported   User @relation("Reported", fields: [reportedId], references: [id], onDelete: Cascade)
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

// ============================================
// SEASONS
// ============================================

model Season {
  id        String   @id @default(cuid())
  name      String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ============================================
// JKLM VERIFICATION
// ============================================

model JKLMVerification {
  id           String   @id @default(cuid())
  userId       String   @unique
  jklmUsername String
  code         String   @unique
  roomCode     String?  // Room JKLM créée pour cette vérification
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
