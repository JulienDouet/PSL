// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// BETTER-AUTH TABLES
// ============================================

model User {
  id            String    @id
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // PSL Custom Fields
  displayName   String?
  mmr           Int       @default(1000)
  gamesPlayed   Int       @default(0)
  discordId     String?   @unique
  twitchId      String?   @unique
  jklmUsername  String?   @unique
  isBanned      Boolean   @default(false)
  isVerified    Boolean   @default(false)
  isAdmin       Boolean   @default(false)
  
  // BetterAuth Relations
  sessions      Session[]
  accounts      Account[]
  
  // PSL Relations
  matchPlayers      MatchPlayer[]
  mmrHistory        MMRHistory[]
  categoryMMRs      UserCategoryMMR[]
  achievements      UserAchievement[]
  reportsMade       Report[]  @relation("Reporter")
  reportsAgainst    Report[]  @relation("Reported")
  jklmVerification  JKLMVerification?
  answers           MatchAnswer[]
  
  // Rivalries (H2H tracking)
  matchups           UserMatchup[] @relation("UserMatchups")
  opponentMatchups   UserMatchup[] @relation("OpponentMatchups")
  
  // Solo Mode
  soloSessions       SoloSession[]
  soloBestStreaks    SoloBestStreak[]
}

model Session {
  id        String   @id
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// ============================================
// MMR BY CATEGORY
// ============================================

model UserCategoryMMR {
  id            String   @id @default(cuid())
  userId        String
  category      Category
  mmr           Int      @default(1000)
  gamesPlayed   Int      @default(0)
  currentStreak Int      @default(0)   // Current consecutive wins
  bestStreak    Int      @default(0)   // All-time best streak
  mmrPeak       Int      @default(1000) // All-time highest MMR
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, category])
}

enum Category {
  // Nouvelles catégories
  GP_FR       // Grand Public FR
  MS_EN       // Mainstream EN
  ANIME       // Anime/Manga
  FLAGS       // Drapeaux
  NOFILTER_FR // Sans Filtre FR
  NOFILTER_EN // No Filter EN
  // Anciennes catégories (gardées pour rétrocompatibilité DB)
  GP          // @deprecated - utiliser GP_FR
  NOFILTER    // @deprecated - utiliser NOFILTER_FR ou NOFILTER_EN
  MUSIC       // @deprecated - pas encore implémenté
  MOVIES      // @deprecated - pas encore implémenté
  GAMES       // @deprecated - pas encore implémenté
}

enum AnswerSource {
  RANKED
  SOLO
}

// ============================================
// MATCHES
// ============================================

model Match {
  id          String      @id @default(cuid())
  lobbyCode   String
  category    Category    @default(GP_FR)
  status      MatchStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  startedAt   DateTime?
  endedAt     DateTime?
  
  players     MatchPlayer[]
  answers     MatchAnswer[]
}

enum MatchStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model MatchPlayer {
  id          String   @id @default(cuid())
  matchId     String
  userId      String
  placement   Int?
  points      Int?
  mmrBefore   Int
  mmrAfter    Int?
  mmrChange   Int?
  isAbandoned Boolean  @default(false)
  
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([matchId, userId])
}

model MatchAnswer {
  id          String   @id @default(cuid())
  matchId     String?  // Nullable for solo mode answers
  userId      String?  // Nullable si on ne trouve pas le userId (cas rares), mais on essaiera de linker
  peerId      Int      // ID JKLM interne pour debug
  roundIndex  Int      // Numéro de la question
  
  question    String   // La question posée (prompt)
  questionHash String? // Hash unique pour identifier la question
  answer      String   // La réponse (correcte)
  playerAnswer String? // Ce que le joueur a répondu (peut être différent de la réponse canonique)
  elapsedTime Int      // Temps en ms
  source      AnswerSource @default(RANKED) // RANKED or SOLO - retroactive for existing
  
  createdAt   DateTime @default(now())
  
  match       Match?   @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  popsauceQuestion PopsauceQuestion? @relation(fields: [questionHash], references: [questionHash])
  
  @@index([matchId])
  @@index([userId])
  @@index([questionHash])
}

// ============================================
// POPSAUCE QUESTIONS (for solo training mode)
// ============================================

model PopsauceQuestion {
  id            String   @id @default(cuid())
  questionHash  String   @unique  // SHA256(prompt + "|" + content) - unique identifier
  
  prompt        String              // "De quel film ça vient ?"
  text          String?             // Text content (if text question)
  imageHash     String?             // Hash of image data (if image question)
  
  correctAnswer String?             // The correct answer learned from matches
  aliases       String[]  @default([]) // Alternative spellings that work
  
  timesAsked    Int      @default(0)   // How many times this question was asked
  timesAnswered Int      @default(0)   // How many times players found the answer
  avgResponseMs Int?                   // Average response time in ms
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  matchAnswers  MatchAnswer[]
  
  @@index([prompt])
  @@index([correctAnswer])
}

// ============================================
// MMR HISTORY
// ============================================

model MMRHistory {
  id        String   @id @default(cuid())
  userId    String
  matchId   String?
  category  Category @default(GP_FR)
  oldMMR    Int
  newMMR    Int
  change    Int
  reason    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// ACHIEVEMENTS
// ============================================

model Achievement {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String
  icon        String
  category    AchievementCategory
  
  users       UserAchievement[]
}

enum AchievementCategory {
  PROGRESSION
  PERFORMANCE
  SPECIAL
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  
  @@unique([userId, achievementId])
}

// ============================================
// REPORTS & MODERATION
// ============================================

model Report {
  id         String       @id @default(cuid())
  reporterId String
  reportedId String
  reason     String
  evidence   String?      @db.Text
  status     ReportStatus @default(PENDING)
  createdAt  DateTime     @default(now())
  resolvedAt DateTime?
  
  reporter   User @relation("Reporter", fields: [reporterId], references: [id], onDelete: Cascade)
  reported   User @relation("Reported", fields: [reportedId], references: [id], onDelete: Cascade)
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

// ============================================
// SEASONS
// ============================================

model Season {
  id        String   @id @default(cuid())
  name      String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ============================================
// JKLM VERIFICATION
// ============================================

model JKLMVerification {
  id           String   @id @default(cuid())
  userId       String   @unique
  jklmUsername String
  code         String   @unique
  roomCode     String?  // Room JKLM créée pour cette vérification
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// RIVALRIES (HEAD-TO-HEAD TRACKING)
// ============================================

model UserMatchup {
  id          String   @id @default(cuid())
  userId      String   // The player
  opponentId  String   // The opponent
  category    Category
  wins        Int      @default(0)
  losses      Int      @default(0)
  lastPlayed  DateTime @default(now())

  user        User     @relation("UserMatchups", fields: [userId], references: [id], onDelete: Cascade)
  opponent    User     @relation("OpponentMatchups", fields: [opponentId], references: [id], onDelete: Cascade)

  @@unique([userId, opponentId, category])
  @@index([userId, category])
}

// ============================================
// ADMIN MONITORING - CONNECTION LOGS
// ============================================

model ConnectionLog {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  roomCode    String                // JKLM room code (e.g. "ABCD")
  nickname    String                // Display name in JKLM
  success     Boolean               // Did the player match to a PSL account?
  method      String?               // How they were matched: "Discord auth", "JKLM username", etc.
  failReason  String?               // If failed, why?
  
  // Optional link to matched user
  userId      String?
  authService String?               // "discord", "twitch", "jklm", null for guests
  authId      String?               // The auth provider ID
  
  category    Category?
  queueCount  String?               // e.g. "2/3" - connected/expected
  
  @@index([createdAt])
  @@index([roomCode])
  @@index([userId])
}

// ============================================
// SOLO MODE (Training / Practice)
// ============================================

enum SoloMode {
  HARDCORE   // 5 seconds per question
  CHALLENGE  // 8 seconds per question
  NORMAL     // 12 seconds per question
}

enum SoloStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
  TIMEOUT     // Killed due to 5 min inactivity
}

model SoloSession {
  id              String     @id @default(cuid())
  userId          String
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category        Category
  mode            SoloMode
  
  streak          Int        @default(0)   // Current streak in this session
  bestStreak      Int        @default(0)   // Best streak achieved in this session
  questionsAsked  Int        @default(0)   // Total questions in this session
  
  roomCode        String?                  // JKLM room code
  status          SoloStatus @default(IN_PROGRESS)
  
  startedAt       DateTime   @default(now())
  lastActivityAt  DateTime   @default(now())  // For timeout detection
  endedAt         DateTime?
  
  @@index([userId])
  @@index([status])
  @@index([category, mode])
}

model SoloBestStreak {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category    Category
  mode        SoloMode
  bestStreak  Int      @default(0)
  achievedAt  DateTime @default(now())
  
  @@unique([userId, category, mode])
  @@index([category, mode, bestStreak])  // For leaderboard queries
}
